<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.school_bus_tracker_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.act_parent.ParentHomePage"/>
        <activity android:name=".ui.act_user_management.act_login.LoginPage"/>
        <activity android:name=".ui.act_user_management.UserManagement"/>
        <activity android:name=".ui.act_user_management.act_register.SignUpPage"/>
        <activity android:name=".ui.act_student.StudentHomePage"/>
        <activity android:name=".ui.act_driver.DriverHomePage"/>
        <activity android:name=".ui.act_driver.DriverServiceListPage"/>
        <activity android:name=".ui.act_driver.ServiceDetailPage"/>
    </application>

</manifest>